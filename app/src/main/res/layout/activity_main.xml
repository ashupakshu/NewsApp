<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<TextView
    android:id="@+id/Business"
    android:clickable="true"
    android:textSize="30sp"
    android:onClick="Business"
    android:textColor="@color/purple_700"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toTopOf="@id/Science"
    app:layout_constraintLeft_toLeftOf="parent"
    android:text="Business"/>
    <TextView
        android:id="@+id/Sports"
        android:onClick="Sports"
        android:textSize="30sp"
        android:clickable="true"
        android:textColor="@color/purple_700"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/Science"
        app:layout_constraintLeft_toRightOf="@id/Business"
        android:text="Sports"/>
    <TextView
        android:id="@+id/Entertainment"
        android:textSize="30sp"
        android:clickable="true"
        android:onClick="Entertainment"
        android:textColor="@color/purple_700"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/Science"
        app:layout_constraintLeft_toRightOf="@id/Sports"
        android:text="Bollywood"/>
    <TextView
        android:id="@+id/Science"
        android:textSize="30sp"
        android:clickable="true"
        android:onClick="Science"
        android:textColor="@color/purple_700"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/Business"
        app:layout_constraintBottom_toTopOf="@id/recyclerView"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Science"/>
    <TextView
        android:id="@+id/Health"
        android:textSize="30sp"
        android:clickable="true"
        android:onClick="Health"
        android:textColor="@color/purple_700"
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/Business"
        app:layout_constraintBottom_toTopOf="@id/recyclerView"
        app:layout_constraintLeft_toRightOf="@id/Science"
        android:text="Health"/>

    <TextView
        android:id="@+id/Technology"
        android:textSize="30sp"
        android:clickable="true"
        android:textColor="@color/purple_700"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:onClick="Technology"
        android:text="Tech"
        app:layout_constraintBottom_toTopOf="@id/recyclerView"
        app:layout_constraintLeft_toRightOf="@id/Health"
        app:layout_constraintTop_toBottomOf="@id/Entertainment" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Science"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>